set -x

# Forecast type and duration information

export FCSTtype=history
export FCSTevent=0 # -- 0 = run regardless of whether TC event is in the basin
                   # -- 1 = run for a specific TC event

#----

# General path information 

export HOMEdir=/Users/hwinter/home/trunk/fv3sar_workflow
export EXECdir=$HOMEdir/exec
export PARMdir=$HOMEdir/parm/HAFS
export SCRIPTdir=$HOMEdir/scripts/HAFS
export USHdir=$HOMEdir/ush
export UTILdir=$HOMEdir/util/ush/HAFS
export WORKdir=/Users/hwinter/work

#----

# PREPBUFR options; 0 = don't process; 1 = process

export PREPBUFRhsa=1      # -- Process NOAA/AOML/HRD dropsondes and drift
                          #    calculations.

export PREPBUFRgivtdruv=1 # -- Process NOAA/AOML/HRD G-IV tail-Doppler
                          #    radar (TDR) u- and v-winds.

# PREBUFR HSA (e.g., TEMP-DROP) options

export HSAdatapath=/Users/hwinter/noscrub/fv3sar_workflow/input-data/hsa/history
export HSAoffset_seconds=10800
export HSAsrchstrs=UZNT,UZPN,UZPA
export HSAprepbufrtbl_filepath=${PARMdir}/bufrprep/prepobs_prep.bufrtable
export HSAbufrinfo_filepath=${PARMdir}/bufrprep/hsa.bufr_info.json
export HSAobserr_filepath=${PARMdir}/bufrprep/hsa.obs_error

# PREPBUFR G4TDRUV (e.g., G-IV tail-Dopper radar u- and v-winds)
# options.

export G4TDRUVdatapath=/Users/hwinter/noscrub/fv3sar_workflow/input-data/givtdruv
export G4TDRUVbufrinfo_filepath=${PARMdir}/bufrprep/givtdruv.bufr_info.json
export G4TDRUVprepbufrtbl_filepath=${PARMdir}/bufrprep/prepobs_prep.bufrtable

###########################################################################
# USER: DO NOT MAKE CHANGES BELOW (if you do, you're on your own!) 
###########################################################################

# Define local variables

export COMROOT=${WORKdir}/${USER}/com/${CYCLE}
export EXPTROOT=${WORKdir}/${USER}/${CYCLE}
export ITRCROOT=${EXPTROOT}/intercom

# Create local sub-directories

mkdir -p ${COMROOT}
mkdir -p ${EXPTROOT}
mkdir -p ${ITRCROOT}
